
             
        <tr>
        <th class="descr" style=background-image:(<%= technology.image_url %>)><%= technology.name %></th>
        
        
        
        <%= form_tag vylepsi_technology_path(:technology => technology.id, :user_id => current_user) do %>
          <td class="v2"><%= submit_tag number_with_precision technology.cena_technology(current_user), :precision => 0%></td>
           <%end%> 
            
             
            <% vylep = technology.vylepseno(current_user)%>
            <% technology.max_lvl.times do |lvl| %>
            
                      
           
            <% if vylep > lvl %>
              <% if technology.levely.include?(lvl)%>
                <td class="v1" style=background-image:(<%= technology.cesta_technologie("v")%>)>
                <%= lvl+1 %>
                </td>
                
            
              <% else %>
                <td class="v1">
                <%= lvl+1 %>
                </td>

              <%end%>

            <% else %>
            <% if technology.levely.include?(lvl)%>
            <td style=background-image:(<%= technology.cesta_technologie("n")%>)>
            <%= lvl+1 %></td>
            <%else%>
            <td>
                <%= lvl+1 %>
                </td>
            <%end%>
            <%end%>
              
             

            
         
        
      
        <%end%></tr>
        <tr><td colspan="19"  id="mino"><p><%= technology.description %></p></td>
          </tr>
   
            